<script>
let deferredPrompt;

window.addEventListener('beforeinstallprompt', (e) => {
  e.preventDefault();
  deferredPrompt = e;
});

function installApp(){
  if(deferredPrompt){
    deferredPrompt.prompt();
    deferredPrompt.userChoice.then(choiceResult => {
      deferredPrompt = null;
    });
  } else {
    alert("Sur iPhone : appuyez sur le bouton partager puis 'Sur l‚Äô√©cran d‚Äôaccueil'.");
  }
}
